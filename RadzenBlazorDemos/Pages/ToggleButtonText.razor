@inject NotificationService NotificationService


<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem" Wrap="FlexWrap.Wrap">
    <RadzenToggleButton Variant="Variant.Text" Click=@(args => OnClick("Primary button")) Text="Primary" ButtonStyle="ButtonStyle.Primary" InputAttributes="@(new Dictionary<string,object>(){ { "aria-label", "Primary" }})" />
    <RadzenToggleButton Variant="Variant.Text" Click=@(args => OnClick("Secondary button")) Text="Secondary" ButtonStyle="ButtonStyle.Secondary" InputAttributes="@(new Dictionary<string,object>(){ { "aria-label", "Secondary" }})" />
    <RadzenToggleButton Variant="Variant.Text" Click=@(args => OnClick("Info button")) Text="Info" ButtonStyle="ButtonStyle.Info" InputAttributes="@(new Dictionary<string,object>(){ { "aria-label", "Info" }})" />
    <RadzenToggleButton Variant="Variant.Text" Click=@(args => OnClick("Success button ")) Text="Success" ButtonStyle="ButtonStyle.Success" InputAttributes="@(new Dictionary<string,object>(){ { "aria-label", "Success" }})" />
    <RadzenToggleButton Variant="Variant.Text" Click=@(args => OnClick("Warning button ")) Text="Warning" ButtonStyle="ButtonStyle.Warning" InputAttributes="@(new Dictionary<string,object>(){ { "aria-label", "Warning" }})" />
    <RadzenToggleButton Variant="Variant.Text" Click=@(args => OnClick("Danger button")) Text="Danger" ButtonStyle="ButtonStyle.Danger" InputAttributes="@(new Dictionary<string,object>(){ { "aria-label", "Danger" }})" />
</RadzenStack>

