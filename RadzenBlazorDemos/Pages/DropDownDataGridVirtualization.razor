@using RadzenBlazorDemos.Data
@using RadzenBlazorDemos.Models.Northwind
@using Microsoft.EntityFrameworkCore

@inherits DbContextPage

<div class="rz-p-12 rz-text-align-center">
    <RadzenLabel Text="Select Value" Component="DropDownDataGridVirtualization" Style="margin-right: 8px; vertical-align: middle;" />
    <RadzenDropDownDataGrid AllowClear="true" @bind-Value=value AllowVirtualization="true"
                            AllowFiltering="true" Data=@customers TextProperty="CompanyName" ValueProperty="CustomerID" Name="DropDownDataGridVirtualization" />
</div>


@code {
    string value;
    IEnumerable<Customer> customers;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();

        customers = dbContext.Customers.ToList();
    }
}
